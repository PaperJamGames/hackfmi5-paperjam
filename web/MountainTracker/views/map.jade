doctype html
html
    head
        script(src='http://maps.googleapis.com/maps/api/js')
        script(src='/js/jquery.min.js')
        script(src='js/app.js')
        script(src='js/util.js')
        script(src='/js/skel.min.js')
        script(src='/js/skel-layers.min.js')
        script(src='/js/init.js')
        noscript
            link(rel='stylesheet', href='css/skel.css')
            link(rel='stylesheet', href='css/style.css')
            link(rel='stylesheet', href='css/style-xlarge.css')
        link(rel='stylesheet', href='/css/squash.css')
    body
        header#header
            h1#alt Data mock-up
            nav#nav
                ul
                    li: a(href='/demo') Demo
                    li: a(href='/') Back
        table(stlye='width=1024')
            tr
                td.col-xs-12
                    h4 Add waypoint
                    form(action="/gps/coord/test" method="post" enctype="multipart/form-data")
                        label Latitude
                        input(id = "waypoint_lat" type="text" name="lat")
                        label Longtitude
                        input(id = "waypoint_lon" type="text" name="lon")
                        label Name
                        input(type="text" name="name")
                        br
                        input(type="submit" value="Add waypoint")
                td.col-xs-12
                    h4= "Add checkpoint"
                    form(action="upload/image" method="post" enctype="multipart/form-data")
                        label Title
                        input(type="text" name="title")
                        label Latitude
                        input(id = "checkpoint_lat" type="text" name="lat")
                        label Longtitude
                        input(id = "checkpoint_lon" type="text" name="lon")
                        label Note
                        input(type="text" name="note")
                        label Image
                        input(type="file" name="trackData")
                        br
                        input(type="submit" value="Add checkpoint")
            tr
                td
                    h4 Upload GPX path
                    form(action='upload/gpx', method='post', enctype='multipart/form-data')
                        input(type='file', name='trackData')
                        br
                        input(type='submit', value='Submit')
                    #map-canvas(style='width:500px;height:380px;')
                td
                    ul#trackList
